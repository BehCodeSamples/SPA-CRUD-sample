
<div >
    <h1>{{$parent.title}}</h1>
    <form ng-submit="makeSave()">
        <div class="form-group">
            <label for="cname" class="col-sm-2 control-label">Название:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="cname" placeholder="please enter name" ng-model="groupItem.Name" required />
            </div>
        </div>     
        <div class="form-group">
            <label for="teacherSelect" class="col-sm-2 control-label">Преподаватель:</label>
            <div class="col-sm-10">
                <select name="teacherSelect" id="teacherSelect" class="form-control"
                        ng-options="teacher.Id as teacher.Name for teacher in Teachers"
                        ng-model="groupItem.TeacherId"></select>            
            </div>
        </div>   
        <br />
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
                <a class="btn btn-default" href="#/groups">Отмена</a>
            </div>
        </div>
        <br />
    </form>
</div>